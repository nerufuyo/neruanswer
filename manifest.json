{
  "manifest_version": 3,
  "name": "AI Interview Assistant",
  "version": "1.0.0",
  "description": "AI-powered interview question assistant with real-time overlay",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "utils/config.js",
        "utils/storage.js",
        "utils/ai-service.js",
        "content/detector.js",
        "content/overlay.js",
        "content/content.js"
      ],
      "css": [
        "styles/overlay.css",
        "styles/content.css"
      ],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "AI Interview Assistant",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "styles/*.css",
        "utils/*.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
