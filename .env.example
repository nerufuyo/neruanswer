# Environment Configuration for AI Interview Assistant

# AI Provider Configuration
# Choose between 'openai' or 'gemini'
AI_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Google Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# Extension Settings
DEFAULT_LANGUAGE=id
AUTO_DETECT_QUESTIONS=true
OVERLAY_LOCKED=false
MAX_RESPONSE_LENGTH=200

# Development Settings
DEBUG_MODE=false
LOG_LEVEL=info

# API Rate Limiting
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60000

# Cache Settings
ENABLE_RESPONSE_CACHE=true
CACHE_EXPIRY_HOURS=24

# Security Settings
ENCRYPT_API_KEYS=true
SECURE_STORAGE=true

# Supported Platforms (comma-separated)
SUPPORTED_PLATFORMS=hirevue.com,myinterview.com,spark-hire.com,vidcruiter.com,talview.com,interview.com

# UI Configuration
OVERLAY_DEFAULT_POSITION_X=20
OVERLAY_DEFAULT_POSITION_Y=20
OVERLAY_MIN_WIDTH=300
OVERLAY_MIN_HEIGHT=200

# Performance Settings
DETECTION_INTERVAL_MS=3000
DEBOUNCE_TIMEOUT_MS=500
MAX_HISTORY_ENTRIES=50
